<%- include('../../partials/header') %>
    <%- include('../../partials/navbar') %>
        <div class="container">
            <hr>
            <h2>Categorias</h2>
            <a class="btn btn-success" href="/admin/categories/new"><i class="bi bi-plus-lg"></i>Criar nova categoria</a>
            <hr>
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Título</th>
                        <th>Slug</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category => {%>
                        <tr>
                            <th><%= category.id %></th>
                            <th><%= category.title %></th>
                            <th><%= category.slug %></th>
                            <th>
                                <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning"><i class="bi bi-pencil-square"></i>Editar</a>
                                <form method="POST" action="/categories/delete" style="display: inline-block;" onsubmit="confirmarDelecao(event, this)">
                                    <input type="hidden" name="id" value="<%= category.id %>">
                                    <button class="btn btn-danger"><i class="bi bi-trash-fill"></i>Deletar</button>
                                </form>
                            </th>
                        </tr>
                    <% })%>
                </tbody>
            </table>
        </div>
<%- include('../../partials/footer') %>
<script>
    function confirmarDelecao(event, form) {
        event.preventDefault();
        let decision = confirm("Você quer deletar esta categoria?");
        if (decision) {
            form.submit();
        }
    }
</script>