<%- include('../../partials/header') %>
    <%- include('../../partials/navbar') %>
        <div class="container">
            <hr>
            <h2>Artigos</h2>
            <a class="btn btn-success" href="/admin/articles/new"><i class="bi bi-plus-lg"></i>Criar novo artigo</a>
            <hr>
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Título</th>
                        <th>Slug</th>
                        <th>Categoria</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% articles.forEach(article=> { %>
                        <tr>
                            <td><%= article.id %></td>
                            <td><%= article.title %></td>
                            <td><%= article.slug %></td>
                            <td><%= article.categoryId %></td>
                            <td>acoes</td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <%- include('../../partials/footer') %>
            <script>
                function confirmarDelecao(event, form) {
                    event.preventDefault();
                    let decision = confirm("Você quer deletar esta categoria?");
                    if (decision) {
                        form.submit();
                    }
                }
            </script>