<%- include('../../partials/header') %>
    <%- include('../../partials/navbar') %>
        <div class="container">
            <hr>
            <h2>Usuários</h2>
            <a class="btn btn-success" href="/admin/users/create"><i class="bi bi-plus-lg"></i>Criar novo usuário</a>
            <hr>
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <th><%= user.id %></th>
                            <th><%= user.email %></th>
                        </tr>
                    <% })%>
                </tbody>
            </table>
        </div>
<%- include('../../partials/footer') %>
<script>
    function confirmarDelecao(event, form) {
        event.preventDefault();
        let decision = confirm("Você quer deletar esta categoria?");
        if (decision) {
            form.submit();
        }
    }
</script>